<style>
  p,
  a {
    font-size: 1rem;
  }
</style>

<div class="container mt-3">
  <div class="row">
    <div class="col-md-8">
      <h2>Detail contact</h2>
      <% if (!contact) { %>
      <p class="alert alert-danger" role="alert">
        Data kontak tidak ditemukan <a href="/ejs-layout-contact" class="fw-bold">kembali</a>
      </p>
      <% } else { %>
      <div class="card" style="width: 18rem">
        <div class="card-body">
          <h2 class="card-title"><%= contact.nama %></h2>
          <h3 class="card-subtitle mb-2 text-body-secondary"><%= contact.noHp %></h3>
          <p class="card-text"><%= contact.email %></p>
          <a
            href="/ejs-layout-contact/delete/<%= contact.id %>"
            class="btn btn-danger btn-sm"
            onclick="return confirm('Yakin?')"
            >hapus</a
          >
          <a href="/ejs-layout-contact/edit/<%= contact.id %>" class="btn btn-success btn-sm">edit</a>
          <a href="/ejs-layout-contact" class="card-link d-block mt-3">&laquo; kembali</a>
        </div>
      </div>
      <% } %>
    </div>
  </div>
</div>
