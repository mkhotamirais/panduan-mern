<h1><%= title %></h1>
<div class="row">
  <div class="col-md-6">
    <h2>form edit data kontak</h2>

    <% if (typeof errors != 'undefined') { %>
    <div class="alert alert-danger" role="alert">
      <ul>
        <% errors.forEach(error => { %>
        <li><%= error.msg %></li>
        <% }) %>
      </ul>
    </div>
    <% } %>
    <form method="post" action="/ejs-layout-contact/edit">
      <input type="hidden" name="id" value="<%= contact.id %>" />
      <input type="hidden" name="oldNama" value="<%= contact.oldNama || contact.nama %>" />
      <div class="mb-3">
        <label for="nama" class="form-label">Nama</label>
        <input type="text" class="form-control" id="nama" name="nama" value="<%= contact.nama %>" />
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control" id="email" name="email" value="<%= contact.email %>" />
      </div>
      <div class="mb-3">
        <label for="noHp" class="form-label">noHp</label>
        <input type="tel" class="form-control" id="noHp" name="noHp" value="<%= contact.noHp %>" />
      </div>
      <button type="submit" class="btn btn-primary">Ubah</button>
    </form>
  </div>
</div>
